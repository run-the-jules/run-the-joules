<h1>Welcome, <%= current_user.full_name %></h1>

<%= form_with url: utilities_path, method: :get, local: true do |f| %>
  <%= f.select :utility, provider_list.map {|utility| [utility[:attributes][:name], utility[:attributes][:id]]}, prompt: "select-field" %>
  <%= f.submit 'Authorize Provider', class: "button" %>
<% end %>


<h3>Your Points:</h3>
<h2>Total<%=current_user.total_points %></h2>

<h2>Monthly Points: 
<% if @data_info_usage %>
  <% @data_info_usage.each do |month| %>
                        <%= month.monthly_points %>
                      <% end %></h2>
  <h2><% @data_info_usage.each do |month| %>
        <%= month.end_date.strftime('%B') %>'s usage: <%= month.kwh %> kwh</h2>
      <% end %>
<% end %>
